---
// Brands Component - Proveedores de Fisiodermy
const brands = [
  {
    name: 'KLAPP',
    tagline: 'SKIN CARE SCIENCE',
    country: 'CHILE',
    type: 'klapp'
  },
  {
    name: 'AJLA MEDICAL',
    tagline: 'GROUP',
    type: 'ajla'
  },
  {
    name: 'CASMARA',
    tagline: 'Cosmética sin límites',
    type: 'casmara'
  },
  {
    name: 'FUSION',
    tagline: 'MESO',
    type: 'fusion'
  },
  {
    name: 'ekseption',
    tagline: '',
    type: 'ekseption'
  },
  {
    name: 'LUNA BOX',
    tagline: 'Germany',
    type: 'lunabox'
  }
];
---

<section class="brands">
  <div class="container">
    <div class="brands-header animate-on-scroll">
      <p class="section-label centered">Nuestros Proveedores</p>
      <h2 class="brands-title">Trabajamos con las <em>mejores marcas</em></h2>
      <p class="brands-subtitle">Productos de alta calidad certificados internacionalmente</p>
    </div>
    
    <div class="brands-grid animate-on-scroll delay-2">
      <!-- KLAPP -->
      <div class="brand-item">
        <div class="brand-circle">
          <div class="brand-logo">
            <span class="brand-name">KLAPP</span>
            <span class="brand-tagline">SKIN CARE SCIENCE</span>
            <span class="brand-country">CHILE</span>
          </div>
        </div>
      </div>
      
      <!-- AJLA MEDICAL -->
      <div class="brand-item">
        <div class="brand-circle brand-circle-dark">
          <div class="brand-logo">
            <div class="ajla-icon">
              <span></span>
              <span></span>
            </div>
            <span class="brand-name-sm">AJLA MEDICAL</span>
            <span class="brand-tagline-sm">GROUP</span>
          </div>
        </div>
      </div>
      
      <!-- CASMARA -->
      <div class="brand-item">
        <div class="brand-circle">
          <div class="brand-logo">
            <span class="brand-name casmara">CASMARA</span>
            <span class="brand-tagline">Cosmética sin límites</span>
          </div>
        </div>
      </div>
      
      <!-- FUSION -->
      <div class="brand-item">
        <div class="brand-circle">
          <div class="brand-logo">
            <span class="brand-name fusion">FUSION</span>
            <span class="brand-tagline fusion-tag">MESO</span>
          </div>
        </div>
      </div>
      
      <!-- ekseption -->
      <div class="brand-item">
        <div class="brand-circle">
          <div class="brand-logo">
            <span class="brand-name ekseption">ekseption</span>
          </div>
        </div>
      </div>
      
      <!-- LUNA BOX -->
      <div class="brand-item">
        <div class="brand-circle">
          <div class="brand-logo">
            <div class="lunabox-logo">
              <span class="luna">LU<span class="luna-n">N</span>A</span>
              <span class="box">BOX</span>
              <span class="german-flag">
                <span class="flag-black"></span>
                <span class="flag-red"></span>
                <span class="flag-gold"></span>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .brands {
    padding: 120px 0;
    background: #4a4a4a;
    position: relative;
  }

  .brands-header {
    text-align: center;
    margin-bottom: 70px;
  }

  .brands-title {
    font-size: 48px;
    color: var(--white);
    margin-bottom: 15px;
  }

  .brands-title em {
    font-style: italic;
    color: var(--gold);
  }

  .brands-subtitle {
    font-size: 16px;
    color: rgba(255, 255, 255, 0.6);
  }

  .brands-grid {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 40px;
    flex-wrap: wrap;
  }

  .brand-item {
    transition: transform 0.4s ease;
  }

  .brand-item:hover {
    transform: translateY(-10px);
  }

  .brand-circle {
    width: 180px;
    height: 180px;
    background: var(--white);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
    transition: all 0.4s ease;
  }

  .brand-circle:hover {
    box-shadow: 0 15px 50px rgba(201, 162, 39, 0.3);
  }

  .brand-circle-dark {
    background: var(--black);
  }

  .brand-logo {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 20px;
  }

  .brand-name {
    font-family: var(--font-body);
    font-size: 24px;
    font-weight: 700;
    color: var(--black);
    letter-spacing: 2px;
  }

  .brand-name-sm {
    font-family: var(--font-body);
    font-size: 12px;
    font-weight: 500;
    color: var(--white);
    letter-spacing: 2px;
    margin-top: 10px;
  }

  .brand-tagline {
    font-size: 10px;
    font-weight: 400;
    color: #666;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  .brand-tagline-sm {
    font-size: 10px;
    color: rgba(255, 255, 255, 0.6);
    letter-spacing: 1px;
  }

  .brand-country {
    font-size: 11px;
    font-weight: 600;
    color: #c41e3a;
    letter-spacing: 1px;
    margin-top: 5px;
  }

  /* AJLA Icon */
  .ajla-icon {
    display: flex;
    gap: 8px;
    margin-bottom: 5px;
  }

  .ajla-icon span {
    width: 3px;
    height: 40px;
    background: var(--white);
  }

  .ajla-icon span:first-child {
    transform: translateY(8px);
  }

  /* Brand specific styles */
  .casmara {
    font-family: var(--font-display);
    font-size: 22px;
    font-weight: 400;
    letter-spacing: 4px;
    color: #8b7355;
  }

  .fusion {
    font-family: var(--font-body);
    font-size: 22px;
    font-weight: 300;
    color: #a08060;
    letter-spacing: 3px;
  }

  .fusion-tag {
    font-size: 14px;
    color: #a08060;
    letter-spacing: 4px;
    margin-top: 2px;
  }

  .ekseption {
    font-family: var(--font-body);
    font-size: 22px;
    font-weight: 300;
    color: #555;
    letter-spacing: 1px;
  }

  /* LUNA BOX */
  .lunabox-logo {
    display: flex;
    align-items: center;
    gap: 2px;
  }

  .luna {
    font-family: var(--font-body);
    font-size: 20px;
    font-weight: 300;
    color: #333;
    letter-spacing: 1px;
  }

  .luna-n {
    color: #00b5b5;
    font-weight: 400;
  }

  .box {
    font-family: var(--font-body);
    font-size: 20px;
    font-weight: 600;
    color: #333;
    letter-spacing: 1px;
  }

  .german-flag {
    display: flex;
    flex-direction: column;
    margin-left: 4px;
    height: 18px;
    width: 6px;
    overflow: hidden;
    border-radius: 1px;
  }

  .german-flag span {
    flex: 1;
    width: 100%;
  }

  .flag-black {
    background: #000;
  }

  .flag-red {
    background: #dd0000;
  }

  .flag-gold {
    background: #ffcc00;
  }

  @media (max-width: 992px) {
    .brands-grid {
      gap: 30px;
    }

    .brand-circle {
      width: 150px;
      height: 150px;
    }

    .brand-name {
      font-size: 20px;
    }
  }

  @media (max-width: 768px) {
    .brands-title {
      font-size: 36px;
    }

    .brand-circle {
      width: 130px;
      height: 130px;
    }

    .brand-name {
      font-size: 16px;
    }

    .casmara,
    .fusion,
    .ekseption {
      font-size: 16px;
    }

    .luna,
    .box {
      font-size: 16px;
    }
  }
</style>