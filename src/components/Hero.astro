---
// Hero Component - Fisiodermy - Con Carrusel Visible
const slides = [
  {
    title: 'Luce tu',
    highlight: 'mejor versión',
    text: 'Especialistas en fisioterapia dermatofuncional, tratamientos pre y post operatorio, recuperación quirúrgica y bienestar físico.'
  },
  {
    title: 'Tratamientos',
    highlight: 'Post Operatorios',
    text: 'Recuperación acelerada con técnicas especializadas. Minimizamos complicaciones como edema, fibrosis y cicatrización.'
  },
  {
    title: 'Rejuvenecimiento',
    highlight: 'Facial Avanzado',
    text: 'Aparatología de vanguardia y marcas premium para estimular colágeno, mejorar la calidad de la piel y devolver luminosidad. Tratamientos seguros, personalizados y con resultados naturales.'
  }
];
---

<section class="hero" id="inicio">
  <!-- Background -->
  <div class="hero-bg"></div>
  <div class="hero-overlay"></div>
  
  <!-- Slider -->
  <div class="hero-slider">
    {slides.map((slide, index) => (
      <div class={`hero-slide ${index === 0 ? 'active' : ''}`} data-slide={index}>
        <div class="container">
          <div class="hero-content">
            <span class="hero-label">
              <span class="hero-label-line"></span>
              Estética Avanzada
              <span class="hero-label-line"></span>
            </span>
            
            <h1 class="hero-title">
              {slide.title} <em class="gold-shimmer">{slide.highlight}</em>
            </h1>
            
            <p class="hero-text">{slide.text}</p>
            
            <div class="hero-buttons">
              <a href="#contacto" class="btn btn-gold">Agendar Consulta</a>
              <a href="#servicios" class="btn btn-outline">Ver Servicios</a>
            </div>
          </div>
        </div>
      </div>
    ))}
  </div>
  
  <!-- Slider Controls -->
  <div class="hero-controls">
    <button class="hero-prev" aria-label="Anterior">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
        <path d="M15 18l-6-6 6-6"/>
      </svg>
    </button>
    <div class="hero-dots">
      {slides.map((_, index) => (
        <button class={`hero-dot ${index === 0 ? 'active' : ''}`} data-dot={index} aria-label={`Slide ${index + 1}`}></button>
      ))}
    </div>
    <button class="hero-next" aria-label="Siguiente">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
        <path d="M9 18l6-6-6-6"/>
      </svg>
    </button>
  </div>
  
  <!-- Progress Bar -->
  <div class="hero-progress">
    <div class="hero-progress-bar"></div>
  </div>
  
  <!-- Side Info -->
  <div class="hero-side-info">
    <div class="hero-side-item">
      <span class="hero-side-number">01</span>
      <span class="hero-side-text">/ 03</span>
    </div>
  </div>
  
  <!-- Scroll Indicator -->
  <div class="hero-scroll">
    <span>Scroll</span>
    <div class="hero-scroll-line"></div>
  </div>
  
  <!-- Decorative Elements -->
  <div class="hero-decor hero-decor-1"></div>
  <div class="hero-decor hero-decor-2"></div>
</section>

<script>
  // Hero Slider
  const slides = document.querySelectorAll('.hero-slide');
  const dots = document.querySelectorAll('.hero-dot');
  const prevBtn = document.querySelector('.hero-prev');
  const nextBtn = document.querySelector('.hero-next');
  const progressBar = document.querySelector('.hero-progress-bar');
  const sideNumber = document.querySelector('.hero-side-number');
  
  let currentSlide = 0;
  let slideInterval;
  const intervalTime = 6000;
  
  function goToSlide(index) {
    slides.forEach(slide => slide.classList.remove('active'));
    dots.forEach(dot => dot.classList.remove('active'));
    
    currentSlide = index;
    if (currentSlide >= slides.length) currentSlide = 0;
    if (currentSlide < 0) currentSlide = slides.length - 1;
    
    slides[currentSlide].classList.add('active');
    dots[currentSlide].classList.add('active');
    
    if (sideNumber) {
      sideNumber.textContent = String(currentSlide + 1).padStart(2, '0');
    }
    
    resetProgress();
  }
  
  function nextSlide() {
    goToSlide(currentSlide + 1);
  }
  
  function prevSlide() {
    goToSlide(currentSlide - 1);
  }
  
  function resetProgress() {
    if (progressBar) {
      progressBar.style.animation = 'none';
      progressBar.offsetHeight;
      progressBar.style.animation = `progressAnim ${intervalTime}ms linear`;
    }
  }
  
  function startSlider() {
    slideInterval = setInterval(nextSlide, intervalTime);
    resetProgress();
  }
  
  function stopSlider() {
    clearInterval(slideInterval);
  }
  
  prevBtn?.addEventListener('click', () => {
    stopSlider();
    prevSlide();
    startSlider();
  });
  
  nextBtn?.addEventListener('click', () => {
    stopSlider();
    nextSlide();
    startSlider();
  });
  
  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      stopSlider();
      goToSlide(index);
      startSlider();
    });
  });
  
  startSlider();
  
  const heroSection = document.querySelector('.hero');
  heroSection?.addEventListener('mouseenter', stopSlider);
  heroSection?.addEventListener('mouseleave', startSlider);
</script>

<style>
  .hero {
    min-height: 100vh;
    position: relative;
    overflow: hidden;
    background: var(--black);
  }

  .hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
      radial-gradient(ellipse at 30% 20%, rgba(201, 162, 39, 0.15) 0%, transparent 50%),
      radial-gradient(ellipse at 70% 80%, rgba(201, 162, 39, 0.1) 0%, transparent 40%),
      linear-gradient(135deg, var(--black) 0%, var(--black-rich) 50%, var(--black-soft) 100%);
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23c9a227' fill-opacity='0.03'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
  }

  .hero-slider {
    position: relative;
    width: 100%;
    height: 100vh;
  }

  .hero-slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.8s ease, visibility 0.8s ease;
  }

  .hero-slide.active {
    opacity: 1;
    visibility: visible;
  }

  .hero-slide.active .hero-label {
    animation: fadeInUp 0.8s ease 0.2s both;
  }

  .hero-slide.active .hero-title {
    animation: fadeInUp 0.8s ease 0.4s both;
  }

  .hero-slide.active .hero-text {
    animation: fadeInUp 0.8s ease 0.6s both;
  }

  .hero-slide.active .hero-buttons {
    animation: fadeInUp 0.8s ease 0.8s both;
  }

  .hero-content {
    max-width: 800px;
    position: relative;
    z-index: 2;
  }

  .hero-label {
    display: inline-flex;
    align-items: center;
    gap: 20px;
    font-size: 12px;
    font-weight: 500;
    letter-spacing: 4px;
    text-transform: uppercase;
    color: var(--gold);
    margin-bottom: 30px;
  }

  .hero-label-line {
    width: 50px;
    height: 1px;
    background: var(--gold);
  }

  .hero-title {
    font-size: clamp(42px, 6vw, 80px);
    font-weight: 300;
    color: var(--white);
    margin-bottom: 25px;
    letter-spacing: -2px;
    line-height: 1.1;
  }

  .hero-title em {
    font-style: italic;
    font-weight: 400;
    display: block;
  }

  .hero-text {
    font-size: 17px;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 45px;
    max-width: 550px;
    line-height: 1.9;
  }

  .hero-buttons {
    display: flex;
    gap: 20px;
  }

  /* Controls */
  .hero-controls {
    position: absolute;
    bottom: 50px;
    right: 50px;
    display: flex;
    align-items: center;
    gap: 20px;
    z-index: 10;
  }

  .hero-prev,
  .hero-next {
    width: 55px;
    height: 55px;
    background: rgba(201, 162, 39, 0.1);
    border: 1px solid var(--gold);
    color: var(--gold);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .hero-prev:hover,
  .hero-next:hover {
    background: var(--gold);
    color: var(--black);
  }

  .hero-prev svg,
  .hero-next svg {
    width: 22px;
    height: 22px;
  }

  .hero-dots {
    display: flex;
    gap: 15px;
    padding: 0 15px;
  }

  .hero-dot {
    width: 14px;
    height: 14px;
    background: transparent;
    border: 2px solid rgba(201, 162, 39, 0.5);
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0;
  }

  .hero-dot:hover {
    border-color: var(--gold);
    transform: scale(1.1);
  }

  .hero-dot.active {
    background: var(--gold);
    border-color: var(--gold);
    transform: scale(1.2);
  }

  /* Progress Bar */
  .hero-progress {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: rgba(255, 255, 255, 0.1);
    z-index: 10;
  }

  .hero-progress-bar {
    height: 100%;
    background: linear-gradient(90deg, var(--gold-dark), var(--gold), var(--gold-light));
    width: 0;
    animation: progressAnim 6000ms linear;
  }

  @keyframes progressAnim {
    from { width: 0; }
    to { width: 100%; }
  }

  /* Side Info */
  .hero-side-info {
    position: absolute;
    left: 50px;
    bottom: 50px;
    z-index: 10;
  }

  .hero-side-item {
    display: flex;
    align-items: baseline;
    gap: 5px;
  }

  .hero-side-number {
    font-family: var(--font-display);
    font-size: 56px;
    font-weight: 300;
    color: var(--gold);
  }

  .hero-side-text {
    font-size: 16px;
    color: rgba(255, 255, 255, 0.4);
  }

  /* Scroll Indicator */
  .hero-scroll {
    position: absolute;
    bottom: 50px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;
    z-index: 10;
  }

  .hero-scroll span {
    font-size: 10px;
    letter-spacing: 3px;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.4);
  }

  .hero-scroll-line {
    width: 1px;
    height: 50px;
    background: linear-gradient(180deg, var(--gold), transparent);
    animation: pulse 2s ease-in-out infinite;
  }

  /* Decorative */
  .hero-decor {
    position: absolute;
    border: 1px solid rgba(201, 162, 39, 0.2);
    pointer-events: none;
  }

  .hero-decor-1 {
    top: 20%;
    right: 10%;
    width: 300px;
    height: 400px;
    animation: float 8s ease-in-out infinite;
  }

  .hero-decor-1::before {
    content: '';
    position: absolute;
    top: 20px;
    left: 20px;
    right: -20px;
    bottom: -20px;
    border: 1px solid rgba(201, 162, 39, 0.1);
  }

  .hero-decor-2 {
    bottom: 25%;
    right: 15%;
    width: 80px;
    height: 80px;
    transform: rotate(45deg);
    animation: float 6s ease-in-out infinite reverse;
  }

  @media (max-width: 1200px) {
    .hero-decor {
      display: none;
    }
  }

  @media (max-width: 992px) {
    .hero-controls {
      right: 30px;
      bottom: 120px;
    }

    .hero-side-info {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .hero-content {
      padding: 0 20px;
    }

    .hero-buttons {
      flex-direction: column;
    }

    .hero-controls {
      right: 50%;
      transform: translateX(50%);
      bottom: 100px;
    }

    .hero-scroll {
      display: none;
    }

    .hero-label-line {
      width: 30px;
    }

    .hero-prev,
    .hero-next {
      width: 48px;
      height: 48px;
    }
  }
</style>