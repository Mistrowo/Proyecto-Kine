---
// Contact Component - Fisiodermy
const contactDetails = [
  {
    icon: 'location',
    title: 'Ubicación',
    text: 'Santiago, Chile\nProvidencia'
  },
  {
    icon: 'phone',
    title: 'Teléfono',
    text: '+56 9 XXXX XXXX'
  },
  {
    icon: 'clock',
    title: 'Horarios',
    text: 'Lun - Vie: 9:00 - 19:00\nSáb: 9:00 - 14:00'
  }
];

const services = [
  'Pre Operatorio',
  'Post Operatorio',
  'Rejuvenecimiento Facial',
  'Peeling Especializado',
  'Tratamientos Corporales',
  'Kinesiología Dermatofuncional',
  'Otro'
];
---

<section class="contact" id="contacto">
  <div class="container">
    <div class="contact-grid">
      <div class="contact-info animate-on-scroll">
        <h2 class="contact-info-title">
          Agenda tu <em>consulta</em>
        </h2>
        <p class="contact-info-text">
          Evaluamos tu caso de forma personalizada y te recomendamos el tratamiento 
          ideal para ti. Sin compromiso.
        </p>
        
        <div class="contact-details">
          {contactDetails.map((detail) => (
            <div class="contact-detail">
              <div class="contact-detail-icon">
                {detail.icon === 'location' && (
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                    <circle cx="12" cy="10" r="3"/>
                  </svg>
                )}
                {detail.icon === 'phone' && (
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72c.127.96.361 1.903.7 2.81a2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0 1 22 16.92z"/>
                  </svg>
                )}
                {detail.icon === 'clock' && (
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <circle cx="12" cy="12" r="10"/>
                    <polyline points="12 6 12 12 16 14"/>
                  </svg>
                )}
              </div>
              <div class="contact-detail-content">
                <h4>{detail.title}</h4>
                <p set:html={detail.text.replace('\n', '<br>')} />
              </div>
            </div>
          ))}
        </div>
        
        <div class="contact-social">
          <h4>Síguenos en redes</h4>
          <div class="social-links">
            <a href="https://www.instagram.com/fisiodermy/" target="_blank" rel="noopener" class="social-link" aria-label="Instagram">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <rect x="2" y="2" width="20" height="20" rx="5"/>
                <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
                <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
              </svg>
            </a>
            <a href="https://web.facebook.com/profile.php?id=61555491337373" target="_blank" rel="noopener" class="social-link" aria-label="Facebook">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
      
      <div class="contact-form-wrapper animate-on-scroll from-right delay-2">
        <h3>Solicitar Información</h3>
        <p>Completa el formulario y te contactaremos a la brevedad</p>
        
        <form class="contact-form">
          <div class="form-row">
            <div class="form-group">
              <label for="name">Nombre</label>
              <input type="text" id="name" name="name" placeholder="Tu nombre completo" required>
            </div>
            <div class="form-group">
              <label for="phone">Teléfono</label>
              <input type="tel" id="phone" name="phone" placeholder="+56 9 XXXX XXXX" required>
            </div>
          </div>
          
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="tu@email.com" required>
          </div>
          
          <div class="form-group">
            <label for="service">Servicio de interés</label>
            <select id="service" name="service" required>
              <option value="">Seleccionar servicio...</option>
              {services.map((service) => (
                <option value={service}>{service}</option>
              ))}
            </select>
          </div>
          
          <div class="form-group">
            <label for="message">Mensaje</label>
            <textarea id="message" name="message" placeholder="Cuéntanos sobre tu caso o consulta..." rows="4"></textarea>
          </div>
          
          <button type="submit" class="form-submit">
            <span>Enviar Consulta</span>
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<style>
  .contact {
    padding: var(--section-padding) 0;
    background: var(--white-soft);
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1.3fr;
    gap: 80px;
  }

  /* Info */
  .contact-info-title {
    font-size: clamp(32px, 4vw, 44px);
    color: var(--black);
    margin-bottom: 20px;
  }

  .contact-info-title em {
    font-style: italic;
    color: var(--gold);
  }

  .contact-info-text {
    font-size: 16px;
    color: var(--gray);
    line-height: 1.9;
    margin-bottom: 50px;
  }

  .contact-details {
    display: flex;
    flex-direction: column;
    gap: 35px;
  }

  .contact-detail {
    display: flex;
    align-items: flex-start;
    gap: 25px;
  }

  .contact-detail-icon {
    width: 60px;
    height: 60px;
    background: var(--black);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: all 0.4s var(--transition-smooth);
  }

  .contact-detail:hover .contact-detail-icon {
    background: var(--gold);
    transform: scale(1.05);
  }

  .contact-detail-icon svg {
    width: 24px;
    height: 24px;
    color: var(--gold);
    transition: color 0.3s;
  }

  .contact-detail:hover .contact-detail-icon svg {
    color: var(--black);
  }

  .contact-detail-content h4 {
    font-family: var(--font-body);
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 1px;
    text-transform: uppercase;
    color: var(--black);
    margin-bottom: 8px;
  }

  .contact-detail-content p {
    font-size: 15px;
    color: var(--gray);
    line-height: 1.6;
  }

  /* Social */
  .contact-social {
    margin-top: 50px;
    padding-top: 40px;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
  }

  .contact-social h4 {
    font-family: var(--font-body);
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 2px;
    text-transform: uppercase;
    color: var(--black);
    margin-bottom: 25px;
  }

  .social-links {
    display: flex;
    gap: 15px;
  }

  .social-link {
    width: 55px;
    height: 55px;
    background: var(--white);
    border: 1px solid rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.4s var(--transition-smooth);
  }

  .social-link:hover {
    background: var(--black);
    border-color: var(--black);
    transform: translateY(-5px);
  }

  .social-link svg {
    width: 22px;
    height: 22px;
    color: var(--black);
    transition: color 0.3s;
  }

  .social-link:hover svg {
    color: var(--gold);
  }

  /* Form */
  .contact-form-wrapper {
    background: var(--white);
    padding: 60px;
    box-shadow: var(--shadow-lg);
    position: relative;
  }

  .contact-form-wrapper::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, var(--gold), var(--gold-light));
  }

  .contact-form-wrapper h3 {
    font-size: 28px;
    color: var(--black);
    margin-bottom: 10px;
  }

  .contact-form-wrapper > p {
    font-size: 14px;
    color: var(--gray);
    margin-bottom: 40px;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 25px;
  }

  .form-submit {
    width: 100%;
    padding: 22px;
    background: var(--black);
    color: var(--white);
    font-family: var(--font-body);
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 2px;
    text-transform: uppercase;
    border: none;
    cursor: pointer;
    transition: all 0.4s var(--transition-smooth);
    position: relative;
    overflow: hidden;
  }

  .form-submit::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: var(--gold);
    transition: left 0.4s var(--transition-smooth);
    z-index: 0;
  }

  .form-submit span {
    position: relative;
    z-index: 1;
  }

  .form-submit:hover {
    color: var(--black);
  }

  .form-submit:hover::before {
    left: 0;
  }

  @media (max-width: 992px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .contact-form-wrapper {
      padding: 40px 30px;
    }

    .form-row {
      grid-template-columns: 1fr;
    }
  }
</style>
