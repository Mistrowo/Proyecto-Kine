    background: var(--bg-card);
    padding: var(--space-2xl);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
  }
  
  .form-title {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    color: var(--color-primary);
    margin-bottom: var(--space-xl);
  }
  
  .form-row {
